<!DOCTYPE html>
<html lang="">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}New Workout{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
</head>
<body>
<div class="container mt-5">
    {% block body %}
        <h1 class="text-center">New Workout</h1>
        <div class="card p-4">
            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_row(form.name) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.date) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.tipe) }}
            </div>
{#            <div class="mb-3">#}
{#                {{ form_row(form.user) }}#}
{#            </div>#}
{#            <div>#}
{#                <a href="{{ path('exerciseslog_new', {'workout_id': workout.id}) }}" class="btn btn-success float-end">Add Exercise</a>#}
{#            </div>#}
            <div class="text-center mt-3">
                {{ form_row(form.save, { 'label': 'Save', 'attr': { 'class': 'btn btn-primary' } }) }}
            </div>
            {{ form_end(form) }}
        </div>
    {% endblock %}
</div>
</body>
</html>
