<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Exercise List{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{% block body %}
    <style>
        .table-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh;
        }
        table {
            border-collapse: collapse;
            width: 60%;
            margin: auto;
            background-color: #f9f9f9;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }
        th {
            background-color: #1b4f87;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>

    <div class="table-container">
        <table>
            <thead>
            <tr>
                {#                <th>ID</th>#}
                <th>Name</th>
                <th>Video link</th>
                <th>Type ID</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            {% for exercise in exercises %}
                <tr>
                    {#                    <td>{{ exercise.id }}</td>#}
                    <td>{{ exercise.name }}</td>
                    <td><a href="{{ exercise.getVideoLink() }}">{{ exercise.getVideoLink() }}</a></td>
                    <td>{{ exercise.tipe.id }}</td>
                    <td>
                        <form id="edit-form-{{ exercise.id }}" method="POST"
                              action="{{ path('exercise_edit', {'id': exercise.id}) }}">
                            <input type="hidden" name="_method" value="PATCH">
                            <button type="submit">Edit</button>
                        </form>
                    </td>
                    <td>
                        <form method="POST" action="{{ path('exercise_delete', {'id': exercise.id}) }}" onsubmit="return confirm('Confirm deletion?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
</body>
</html>
