<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Exercises List{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
</head>
<body>
{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h1 class="text-center">Exercises List</h1>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead class="table-primary">
                        <tr>
                            <th>Name</th>
                            <th>Video link</th>
                            <th>Type</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for exercise in exercises %}
                            <tr>
                                <td>{{ exercise.name }}</td>
                                <td><a href="{{ exercise.getVideoLink() }}">{{ exercise.getVideoLink() }}</a></td>
                                <td>{{ exercise.tipe.name }}</td>
                                <td>
                                    <form id="edit-form-{{ exercise.id }}" method="POST"
                                          action="{{ path('exercise_edit', {'id': exercise.id}) }}">
                                        <input type="hidden" name="_method" value="PATCH">
                                        <button type="submit" class="btn btn-warning">Edit</button>
                                    </form>
                                </td>
                                <td>
                                    <form method="POST" action="{{ path('exercise_delete', {'id': exercise.id}) }}" onsubmit="return confirm('Confirm deletion?')">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="text-center mt-3">
                    <a href="{{ path('exercise_new') }}" class="btn btn-success">Add exercise</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXlHjAAK2Zd6vHnP6iJX6iFf3wO6hSibFYzey0LMGF82YYZoYwY2f1MAutoZ" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGfonKjKcSmf8GkBWDd5K8fWZXf3pELTQOa1l0xhqtHUFAfKXfFI6EGGo8w" crossorigin="anonymous"></script>
</body>
</html>
